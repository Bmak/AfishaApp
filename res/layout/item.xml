<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_frame"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:padding="5dip" >
   	
    <TextView
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="12sp"
            android:text="25.07.2011 15:23"/>
    <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="italic"
            android:textSize="16sp"
            android:singleLine="true"
            android:text="подробнее..."/>

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/publish_time"
        android:layout_alignRight="@+id/publish_time"
        android:layout_below="@+id/publish_time"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publish_time"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Def Title" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/item_image"
        android:paddingLeft="5dip"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="normal"
        android:text="def description" />
    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:isIndicator="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ratingbar"
        android:background="@android:color/holo_blue_dark"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>